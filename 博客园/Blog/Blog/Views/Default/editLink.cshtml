
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <title>editLink</title>
  
    <link href="~/css/amazeui.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />

    <style>
        .admin-main {
            padding-top: 0px;
        }
    </style>
</head>

<body>

    <div class="am-cf admin-main">
        <!-- content start -->
        <div class="admin-content">
            <div class="admin-content-body">
                <div class="am-g">
                    <form class="am-form am-form-horizontal" action="addlink" method="post" style="padding-top: 30px;">
                        <input value="504" name="roleId" type="hidden">
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">
                                链接名称
                            </label>
                            <div class="am-u-sm-9">
                                <input id="roleName" required="" placeholder="请输入链接名称" value="@ViewBag.name" name="roleName" type="text">
                                <small id="helpRole">输入链接名称。</small>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">
                                链接地址
                            </label>
                            <div class="am-u-sm-9">
                                <textarea rows="1" cols="50" placeholder="请输入链接地址" name="roleDesc">@ViewBag.address</textarea>
                                <small>输入链接地址。</small>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <input id="addRole" class="am-btn am-btn-success" value="提交" type="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#addRole").click(function () {
            alert("成功");

        })
    </script>
</body>

</html>