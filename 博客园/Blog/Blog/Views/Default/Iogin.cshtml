
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iogin</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/lstyle.css">
   
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
</head>

<body>

    <div class="main">
        <div class="container a-container" id="a-container">
            <form class="form" id="a-form" method="post" action="Lregister">
                <h2 class="form_title title">会员注册</h2>
                <div class="form__icons">
                    <images class="form__icon" src="images/1.svg" alt="">
                        <images class="form__icon" src="images/2.svg">
                </div><span class="form__span">or use email for registration</span>
                <input class="form__input" type="text" placeholder="Name" id="Name">
                <input class="form__input" type="text" placeholder="Email" id="Email">
                <input class="form__input" type="text" placeholder="Password" id="Password">
                <button id="zc" class="form__button button submit">注册</button>
            </form>
        </div>
        <script>
            $("#zc").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Default/Lregister",
                    data: { Name: $("#Name").val(), Email: $("#Email").val(), Password: $("#Password").val() },
                    datatype: "json",
                    async: false,
                    success: function (data) {
                        console.log(data);
                        if (data == "1")
                        {
                            alert("该账号已注册！");
                        }
                        if (data == "2") {
                            alert("注册成功！");
                            $(".tdl").click();

                        }
                        if (data == "3") {
                            alert("输入为空！");
                        }
                      

                    },
                    error: function (data) {
                        alert("异常");
                    }

                });

            })
        </script>
        <div class="container b-container" id="b-container">
            <form class="form" id="b-form" method="post" action="Llogin">
                <h2 class="form_title title">会员登录</h2>
                <div class="form__icons">
                    <images class="form__icon" src="images/3.svg">
                </div><span class="form__span">或使用电子邮件进行注册</span>
                <input class="form__input" type="text" placeholder="Name" id="Name1">
                <input class="form__input" type="text" placeholder="Password" id="Password1"><a class="form__link">忘记密码?</a>
                <button id="dl" class="form__button button submit">登录</button>
            </form>
        </div>
        <script>

                $("#dl").click(function () {
                    $.ajax({
                        type: "POST",
                        url: "/Default/Llogin",
                        data: { Name: $("#Name1").val(), Password: $("#Password1").val() },
                        datatype: "json",
                        async: false,
                        success: function (data) {
                            if (data == "True") {
                                alert("登录成功！");
                                window.location = "/Default/ndex";
                            }
                            else {
                                alert("账号或密码错误");
                            }
                        },
                        error: function (data) {
                            alert("异常");
                        }

                    });

                })
        </script>
        <div class="switch" id="switch-cnt">
            <div class="switch__circle"></div>
            <div class="switch__circle switch__circle--t"></div>
            <div class="switch__container" id="switch-c1">
                <h2 class="switch__title title">欢迎回来 ！</h2>
                <p class="switch__description description">为了与我们保持联系，请登录您的个人信息</p>
                <button class="switch__button button switch-btn tdl">登录</button>
            </div>
            <div class="switch__container is-hidden" id="switch-c2">
                <h2 class="switch__title title">你好朋友 !</h2>
                <p class="switch__description description">输入您的个人信息并与我们一起开始旅程</p>
                <button class="switch__button button switch-btn">注册</button>
            </div>
        </div>
    </div>

    <script src="~/scripts/lscript.js"></script>

</body>

</html>
