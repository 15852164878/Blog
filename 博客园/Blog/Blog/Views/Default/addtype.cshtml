
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>addtype</title>


    <link href="~/css/amazeui.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <style>
        .admin-main {
            padding-top: 0px;
        }
    </style>
</head>

<body>

    <div class="am-cf admin-main">
        <!-- content start -->
        <div class="admin-content">
            <div class="admin-content-body">
                <div class="am-g">
                    <form class="am-form am-form-horizontal" action="typeadd" method="post" style="padding-top: 30px;">
                        <input value="504" name="roleId" type="hidden">
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">
                                名称
                            </label>
                            <div class="am-u-sm-9">
                                <input id="roleName" required="" placeholder="请输入名称" value="" name="roleName" type="text">
                                <small id="helpRole">输入名称。</small>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">
                                描述
                            </label>
                            <div class="am-u-sm-9">
                                <textarea rows="5" cols="50" placeholder="请输入描述" name="roleDesc"></textarea>
                                <small>输入描述。</small>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <input id="addRole" class="am-btn am-btn-success" value="提交" type="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>